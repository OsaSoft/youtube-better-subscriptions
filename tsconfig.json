{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": [
            "ES2021",
            "DOM",
            "DOM.Iterable"
        ],
        "typeRoots": [
            "node_modules/@types",
            "node_modules/web-ext-types",
        ],
        "outDir": "dist",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strictNullChecks": false,
    },
    "include": [
        "*.ts",
        "serviceWorker/*.ts",
        "contentScript/*.ts"
    ]
}