{
  "description": "Make navigating YouTube's subscription grid easier by hiding watched videos",
  "short_name": "Better Subs",
  "manifest_version": 2,
  "name": "Better Subscriptions for YouTubeâ„¢",
  "version": "0.19.2",
  "browser_specific_settings": {
    "gecko": {
      "id": "{5dc6dafa-584e-424a-bf90-1d1d8cfa3caa}",
      "strict_min_version": "58.0"
    }
  },
  "icons": {
    "48": "icons/ic_video_library_black_48dp_1x.png"
  },
  "developer": {
    "name": "Oscar Hernandez",
    "url": "https://github.com/OsaSoft"
  },
  "web_accessible_resources": [
    "images/*"
  ],
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "util.js",
        "common.js",
        "settingsLoader.js",
        "queries.js",
        "videos/Video.js",
        "videos/SubscriptionsVideo.js",
        "subs-ui.js",
        "subs.js",
        "vid.js",
        "pageHandler.js",
        "tweaks.js"
      ],
      "css": [
        "common.css",
        "subs.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "pages/background.js"
    ]
  },
  "options_ui": {
    "page": "pages/settings/settings.html",
    "open_in_tab": true
  }
}
